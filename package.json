{
  "devDependencies": {
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-csstree-validator": "^1.9.0",
    "stylelint-scss": "^3.21.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.16",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.1",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "sass": "^1.69.3"
  },
  "scripts": {
    "build:scss:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:scss:prefix": "postcss ./app/assets/builds/application.bootstrap.scss --use=autoprefixer --output=./app/assets/builds/application.bootstrap.css",
    "build:scss": "yarn build:scss:compile && yarn build:scss:prefix",
    "watch:scss": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:scss\""
  },
  "browserslist": [
    "defaults"
  ]
}