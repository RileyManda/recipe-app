<div class="container">
<%= form_for @recipe, url: new_recipe_path, method: :post do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :preparation_time, class: "form-label" %>
    <%= f.number_field :preparation_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :cooking_time, class: "form-label" %>
    <%= f.number_field :cooking_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :public, class: "form-check-input" %>
    <%= f.label :public, class: "form-check-label" %>
  </div>

  <div class="text-center">
    <%= f.submit 'Create Recipe', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>