<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mb-3 text-center">Recipes</h2>
      <%= button_to 'Add Recipe', new_recipe_path, method: :get, class: 'btn btn-primary btn-sm' %>
      <ul class="list-group">
        <% if @recipes.any? %>
          <% @recipes.each do |recipe| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="col-8">
                <div class="d-flex flex-column">
                  <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
                  <p class="text-muted text-center"><%= recipe.description %></p>
                </div>
              </div>
              <div class="col-4 text-end">
                <% if can? :manage, recipe %>
                  <%= button_to "Remove", recipe, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                <% end %>
              </div>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item text-center">
            <p>No recipes available.</p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>