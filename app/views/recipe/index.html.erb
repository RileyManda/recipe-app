<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mb-3 text-center">Recipes</h2>
      <ul class="list-group">
        <% if @recipes.any? %>
        <% @recipes.each do |recipe| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
             <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
              <%= button_to "Remove", recipe, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            </div>
            <p class="text-muted"><%= recipe.description %></p>

          </li>
        <% end %>
        <% else %>
         <p>No recipes available.</p>
  <% end %>
      </ul>
    </div>
  </div>
  <button class="btn btn-primary" type="submit"> <%= link_to 'Add Recipe', new_recipe_path %>Add Recipe</button>

</div>
