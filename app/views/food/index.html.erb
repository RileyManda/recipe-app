<h1 class="text-center mt-3">Foods</h1>
<main class="container mt-3">
  <div class="card">
    <div class="card-header">
      <div class="col-12">
      <a href="<%= new_food_path %>" class="btn btn-primary mb-3 float-end">Add food</a>
      </div>
    </div>
    <div class="card-body">
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Food</th>
            <th>Measurement unit</th>
            <th>Unit price</th>
            <th>Actions</th>
          </tr>
        </thead>
        
        <tbody>
    <% @food.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td><%= food.quantity %></td>
    
      </tr>
    <% end %>
  </tbody>
  
      </table>
      <%= link_to 'New Food', new_food_path, class: 'btn btn-primary' %>
    </div>
  </div>
</main>