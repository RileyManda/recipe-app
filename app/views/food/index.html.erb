<h1 class="text-center mt-3">Foods</h1>
<main class="container mt-3">
  <div class="card">
    <div class="card-header">
      <div class="col-12">
      <a href="<%= new_food_path %>" class="btn btn-primary mb-3 float-end">Add food</a>
      </div>
    </div>
    <div class="card-body">
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Food</th>
            <th>Measurement unit</th>
            <th>Unit price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @foods.present? %>
            <% @foods.each do |food| %>
              <tr>
                <td><%= food.name %></td>
                <td><%= food.measurement_unit %></td>
                <td><%= food.price %></td>
                <td>
                  <a href="#" class="btn btn-link" data-confirm="Are you sure?">Delete</a>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4">No food items found.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>